{
  "name": "greenscale",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "dependencies": {
    "dotenv": "16.4.7"
  },
  "devDependencies": {
    "turbo": "2.3.3",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "drizzle-kit": "0.30.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.23.1",
      "@esbuild-kit/core-utils": "npm:@sxzz/core-utils@latest",
      "@esbuild-kit/esm-loader": "npm:tsx@latest"
    }
  }
}